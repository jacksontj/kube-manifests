{
   "apiVersion": "extensions/v1beta1",
   "kind": "Deployment",
   "metadata": {
      "annotations": { },
      "labels": {
         "name": "kube-cert-manager"
      },
      "name": "kube-cert-manager",
      "namespace": "nginx-ingress"
   },
   "spec": {
      "minReadySeconds": 30,
      "replicas": 1,
      "revisionHistoryLimit": 10,
      "strategy": {
         "rollingUpdate": {
            "maxSurge": 0,
            "maxUnavailable": 1
         },
         "type": "RollingUpdate"
      },
      "template": {
         "metadata": {
            "annotations": { },
            "labels": {
               "name": "kube-cert-manager"
            }
         },
         "spec": {
            "containers": [
               {
                  "args": [
                     "--acme-url=https://acme-v01.api.letsencrypt.org/directory",
                     "--data-dir=/var/lib/cert-manager",
                     "--renew-before-days=21"
                  ],
                  "env": [
                     {
                        "name": "AWS_ACCESS_KEY_ID",
                        "valueFrom": {
                           "secretKeyRef": {
                              "key": "access_key_id",
                              "name": "kube-cert-manager-aws"
                           }
                        }
                     },
                     {
                        "name": "AWS_SECRET_ACCESS_KEY",
                        "valueFrom": {
                           "secretKeyRef": {
                              "key": "secret_access_key",
                              "name": "kube-cert-manager-aws"
                           }
                        }
                     }
                  ],
                  "image": "iosphere/kube-cert-manager:5bba617",
                  "name": "kube-cert-manager",
                  "ports": [
                     {
                        "containerPort": 8080,
                        "name": "http"
                     },
                     {
                        "containerPort": 8081,
                        "name": "tls-sni"
                     }
                  ],
                  "stdin": false,
                  "tty": false,
                  "volumeMounts": [
                     {
                        "mountPath": "/var/lib/cert-manager",
                        "name": "data"
                     }
                  ]
               }
            ],
            "imagePullSecrets": [ ],
            "terminationGracePeriodSeconds": 30,
            "volumes": [
               {
                  "name": "data",
                  "persistentVolumeClaim": {
                     "claimName": "kube-cert-manager"
                  }
               }
            ]
         }
      }
   }
}
